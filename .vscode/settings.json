{
  // File encoding settings for C++ files
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,

  // Ensure UTF-8 for C/C++ files
  "[cpp]": {
    "files.encoding": "utf8"
  },
  "[c]": {
    "files.encoding": "utf8"
  },
  "[h]": {
    "files.encoding": "utf8"
  },

  // Editor settings
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.insertSpaces": false,

  // C++ IntelliSense settings
  "C_Cpp.default.compilerPath": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/*/bin/Hostx64/x64/cl.exe",
  "C_Cpp.default.intelliSenseMode": "windows-msvc-x86",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c11",

  // File associations
  "files.associations": {
	"*.h": "cpp",
	"*.cpp": "cpp",
	"iostream": "cpp"
}
}
